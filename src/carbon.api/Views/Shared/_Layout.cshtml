<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - carbon.api</title>
    
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        
        <nav class="light-blue darken-4">
            <div class="container">
                <div class="row">
                    <div class="nav-wrapper s12 m10 offset-m1 l8 offset-l2">
                        <a href="/" class="brand-logo">Carbon</a>
                        <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                        <ul id="nav-mobile" class="right hide-on-med-and-down">
                            <li><a href="/Account/Register">Register</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        
        <ul class="sidenav" id="mobile-nav">
            <li><a href="/Account/Register">Register</a></li>
        </ul>
        
    </header>
    
    <main>
        @RenderBody()
    </main>
    
    <footer class="page-footer light-blue darken-3">
        <div class="container">
            <div class="row grey-text text-lighten-5">
                <div class="s12 m10 offset-m1 l8 offset-l2">
                </div>
            </div>
        </div>
        <div class="footer-copyright light-blue darken-4">
            <div class="container">
                2019 © Owen Holloway <a href="https://zeryter.xyz">zeryter.xyz</a>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/materialize/js/materialize.js"></script>
    </environment>
    
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/materialize/js/materialize.min.js"></script>
    </environment>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
